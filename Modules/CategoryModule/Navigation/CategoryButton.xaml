<UserControl x:Class="CategoryModule.Navigation.CategoryButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CategoryModule.Navigation"
             xmlns:infCommands="clr-namespace:KnolwdgeBase.Infrastructure;assembly=KnolwdgeBase.Infrastructure"
             xmlns:views="clr-namespace:CategoryModule.Views"
             mc:Ignorable="d">
    <Grid Margin="5">
        <Button Command="{x:Static infCommands:GlobalCommands.NavigateCommand}" CommandParameter="{x:Type views:CategoryView}">Categories</Button>
    </Grid>
</UserControl>
