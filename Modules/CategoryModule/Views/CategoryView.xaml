<UserControl x:Class="CategoryModule.Views.CategoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CategoryModule.Views"
             mc:Ignorable="d" 
             d:DesignHeight="359" d:DesignWidth="429">
    <StackPanel >
        <DataGrid x:Name="dataGrid" AutoGenerateColumns="False" ItemsSource="{Binding Categories}" RowEditEnding="gridCategory_RowEditEnding">
            <DataGrid.Columns>
                <DataGridTextColumn Header="tes" Binding="{Binding Title, UpdateSourceTrigger=PropertyChanged}" />
                <DataGridTextColumn Header="dd" Binding="{Binding Description, UpdateSourceTrigger=PropertyChanged}"/>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</UserControl>
